{
  "manifest_version": 3,
  "name": "She4",
  "version": "1.0.1",
  "description": "Calm your girlfriend down... before she blows up and takes your tabs with it! And you BETTER mean it!",

  "permissions": ["tabs", "alarms","storage"],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html"
  },
 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }
],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }

}

